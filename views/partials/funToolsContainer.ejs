<span id="funToolsHider" class="hideElement">
    <div id="funToolsContainer">
        <div id="timeSavedSpeeding">
            <h4>Time Saved</h4>
            <span id="speedingInputs">
                <span id="speedLimit">
                    <p>Speed <br> Limit</p>
                    <input id="speedLimitSlider" type="range" orient="vertical" min="1" max="140" oninput="speedLimitSliderInput()">
                    <input id="speedLimitNumber" type="number" pattern="[0-9]*" inputmode="numeric" step="1" min="1" max="140" oninput="speedLimitNumberInput()">
                </span>
                <span id="drivingSpeed">
                    <p>Driving <br> Speed</p>
                    <input id="drivingSpeedSlider" type="range" orient="vertical" min="1" max="140" oninput="drivingSpeedSliderInput()">
                    <input id="drivingSpeedNumber" type="number" pattern="[0-9]*" inputmode="numeric" step="1" min="1" max="140" oninput="drivingSpeedNumberInput()">
                </span>
            </span>
            <span id="distanceInput">
                <input id="milesNumber" type="number" pattern="[0-9]*" inputmode="numeric" min="0" oninput="milesNumberInput()">
                Miles
            </span>
            <p id="timeSaved"></p>
        </div>
    </div>
</span>